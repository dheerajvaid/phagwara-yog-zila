<section class="container mt-4">
    <h2>Attendance Report for <%= new Date().toLocaleDateString() %></h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Saadhak Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% attendanceRecords.forEach((record, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= record.saadhak.name %></td>
                    <td><%= record.status %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</section>
