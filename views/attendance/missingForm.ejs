<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
  <h4 class="mb-3">🕵️‍♂️ Non-Attendance Report</h4>
  <form method="POST" action="/attendance/missing/report" class="row g-3">

    <div class="col-md-3">
      <label>From Date</label>
      <input type="date" name="from" class="form-control" required value="<%= defaultFrom %>">


    </div>

    <div class="col-md-3">
      <label>To Date</label>
      <input type="date" name="to" class="form-control" required value="<%= defaultTo %>">
    </div>

    <div class="col-md-4">
      <label>Select Kender</label>
      <select name="kender" class="form-control" required>
        <% kendras.forEach(k => { %>
          <option value="<%= k._id %>"><%= k.name %></option>
        <% }) %>
      </select>
    </div>

    
    <div class="col-12">
      <button class="btn btn-primary">Get Report</button>
    </div>
  </form>
</div>
