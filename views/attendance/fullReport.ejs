<section class="container mt-4">
    <h2>Full Attendance Report for <%= date %></h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Saadhak Name</th>
          <th>Kender</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% attendanceRecords.forEach((record, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= record.saadhak.name %></td>
            <td><%= record.saadhak.kender?.name || 'N/A' %></td>
            <td><%= record.status %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>
  