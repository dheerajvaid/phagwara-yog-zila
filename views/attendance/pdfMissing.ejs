<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Missing Attendance Report</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
<style>
    body {
      font-family: 'Segoe UI', sans-serif;
      font-size: 18px;
      font-weight: 600;
      margin: 10px;
      color: #000;
    }

    h2 {
      text-align: center;
      font-size: 26px;
      font-weight: 800;
      margin-bottom: 14px;
      color: #dc3545;
      border-bottom: 2px solid #dc3545;
      padding-bottom: 6px;
    }

    .header-logo {
      text-align: center;
      margin-bottom: 10px;
    }

    .header-logo img {
      height: 60px;
    }

    .summary-table {
      width: 100%;
      margin-bottom: 15px;
      border-collapse: collapse;
    }

    .summary-table td {
      padding: 6px 10px;
      font-weight: 700;
    }

    /* Wrapper for mobile horizontal scroll */
    .table-wrapper {
      width: 100%;
      overflow-x: auto;
    }

    table.data-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 20px;
      font-weight: 700;
      margin-bottom: 10px;
      table-layout: auto;
      word-break: break-word;
    }

    table.data-table th, table.data-table td {
      border: 2px solid #000;
      padding: 8px 10px;
      text-align: center;
    }

    table.data-table th {
      background-color: #dc3545;
      color: white;
    }

    table.data-table td.never {
      background-color: #fff3cd;
      font-weight: bold;
    }

    table.data-table td.attended {
      background-color: #d4edda;
      font-weight: bold;
    }

    .footer {
      text-align: right;
      font-size: 16px;
      margin-top: 20px;
      font-weight: bold;
    }

    .page-break {
      page-break-after: always;
    }

    @media print {
      * {
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
    }

    /* ---------- MOBILE FIXES ---------- */
    @media (max-width: 600px) {
      body {
        font-size: 14px;
      }

      table.data-table {
        font-size: 14px;
      }

      table.data-table th, table.data-table td {
        padding: 4px 6px;
      }

      h2 {
        font-size: 20px;
      }

      .header-logo img {
        height: 45px;
      }
    }

    /* ---------- FIXED A4 PAGE SIZE ---------- */
    @page {
      size: A4 portrait;
      margin: 10mm;
    }
</style>

</head>
<body>

  <div class="header-logo">
    <img src="<%= logoBase64 %>" alt="Bharatiya Yog Sansthan Logo" />
  </div>

  <h2>Missing Attendance Report</h2>

  <table class="summary-table">
    <tr>
      <td>From: <strong><%= new Date(from).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %></strong></td>
      <td>To: <strong><%= new Date(to).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %></strong></td>
    </tr>
    <tr>
      <td>Zila: <strong><%= zilaName || 'All' %></strong></td>
      <td>Ksheter: <strong><%= ksheterName || 'All' %></strong></td>
    </tr>
    <tr>
      <td>Kender: <strong><%= kenderName || 'All' %></strong></td>
      <td>Total Saadhaks: <strong><%= total %></strong></td>
    </tr>
  </table>

  <% const rowsPerPage = 40; const groups = []; for (let i = 0; i < missing.length; i += rowsPerPage) { groups.push(missing.slice(i, i + rowsPerPage)); } %>

  <% groups.forEach((group, pageIndex) => { %>

    <div class="table-wrapper">
      <table class="data-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Mobile</th>
            <th>Kender</th>
            <th>Last Attended</th>
            <th>Days</th>
          </tr>
        </thead>
        <tbody>
          <% group.forEach((s, i) => { %>
            <tr>
              <td><%= pageIndex * rowsPerPage + i + 1 %></td>
              <td><%= s.name %></td>
              <td><%= s.mobile %></td>
              <td><%= s.kenderName || '—' %></td>
              <td class="<%= s.lastAttended ? 'attended' : 'never' %>">
                <% if (s.lastAttended) {
                     const d = new Date(s.lastAttended).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' });
                     const wd = new Date(s.lastAttended).toLocaleDateString('en-IN', { weekday: 'short' });
                %>
                  <%= d %> (<%= wd %>)
                <% } else { %>
                  Never Attended
                <% } %>
              </td>
              <td>
                <% if (s.lastAttended) { %>
                  <%= Math.floor((Date.now() - new Date(s.lastAttended).getTime()) / (1000 * 60 * 60 * 24)) %>
                <% } else { %>
                  —
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <% if (pageIndex < groups.length - 1) { %>
      <div class="page-break"></div>
    <% } %>

  <% }) %>

  <div class="footer">
    Generated on <%= new Date().toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %>
  </div>

</body>
</html>
