<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<style>
  table {
    border-collapse: collapse;
    width: 100%;
    font-size: 0.85rem; /* Smaller table font */
  }

  table th, table td {
    border: 1px solid #dee2e6;
    padding: 8px;
    text-align: center;
    vertical-align: middle;
  }

  table th {
    background-color: #f8f9fa;
    font-weight: bold;
  }

  table tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  table tr:hover {
    background-color: #e9ecef;
  }

  h2, h4 {
    font-size: 1.25rem; /* Slightly smaller headings */
  }

  button#exportBtn {
    background-color: #0d6efd;
    color: white;
    padding: 8px 16px;
    font-size: 0.9rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: 0.3s ease;
  }

  button#exportBtn:hover {
    background-color: #0b5ed7;
  }

  @media (max-width: 576px) {
    table {
      font-size: 0.75rem; /* Even smaller on extra small screens */
    }

    h2 {
      font-size: 1.1rem;
    }

    h4 {
      font-size: 0.95rem;
    }

    button#exportBtn {
      font-size: 0.8rem;
      padding: 6px 12px;
    }
  }
</style>

<div class="container mt-4 mb-5">
  <div class="text-center mb-4" id="present-attendance-report">
    <h2>üìã Shivir Attendance Report</h2>

    <h4>‚úÖ Present (at least once)</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <% days.forEach(day => { %>
            <th><%= day %></th>
          <% }) %>
        </tr>
      </thead>
      <tbody>
        <% registrations.forEach(reg => {
             const wasPresent = days.some(day => attendanceData[day]?.has(reg._id.toString()));
             if (wasPresent) { %>
          <tr>
            <td><%= reg.name.toUpperCase() %> (<%= reg.gender[0].toUpperCase() %>)</td>
            <% days.forEach(day => { %>
              <td>
                <%= attendanceData[day]?.has(reg._id.toString()) ? '‚úÖ' : '‚ùå' %>
              </td>
            <% }) %>
          </tr>
        <% } }) %>
      </tbody>
    </table>
  </div>

  <!-- Export button -->
  <div class="text-center mt-4 mb-5">
    <button id="exportBtn" class="btn btn-primary">Export Present Attendance as Image üì∏</button>
  </div>

  <div class="text-center mb-4">
    <h4 class="mt-4">‚ùå Not Present (on any day)</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <% days.forEach(day => { %>
            <th><%= day %></th>
          <% }) %>
        </tr>
      </thead>
      <tbody>
        <% registrations.forEach(reg => {
             const wasPresent = days.some(day => attendanceData[day]?.has(reg._id.toString()));
             if (!wasPresent) { %>
          <tr>
            <td><%= reg.name.toUpperCase() %> (<%= reg.gender[0].toUpperCase() %>)</td>
            <% days.forEach(day => { %>
              <td>‚ùå</td>
            <% }) %>
          </tr>
        <% } }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Include html2canvas from CDN -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

<script>
  document.getElementById('exportBtn').addEventListener('click', () => {
    const presentReport = document.getElementById('present-attendance-report');

    html2canvas(presentReport).then(canvas => {
      const link = document.createElement('a');
      link.download = 'shivir-attendance-present-report.png';
      link.href = canvas.toDataURL('image/png');
      link.click();
    }).catch(err => {
      alert('Error exporting image: ' + err);
    });
  });
</script>

<%- include('../partials/footer') %>
