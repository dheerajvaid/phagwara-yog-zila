<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<section class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold text-primary">
      🏕️ Kenders under Ksheter: <span class="text-success"><%= ksheter.name %></span>
    </h4>
  </div>
  <a href="/ksheter/manage?zila=<%= ksheter.zila._id %>" class="btn btn-outline-secondary btn-sm mb-3">
    ⬅️ Back to Ksheter List
  </a>
  
  <% if (kenders.length === 0) { %>
    <div class="alert alert-warning text-center">No Kenders found for this Ksheter.</div>
  <% } else { %>
    <div class="table-responsive shadow-sm">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Kender Name</th>
            <th>Address</th>
            <th>Zila</th>
            <th>Ksheter</th>
            <th>Start Time</th> <!-- ✅ New Column -->
          </tr>
        </thead>
        <tbody>
          <% kenders.forEach((k, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= k.name %></td>
              <td><%= k.address %></td>
              <td><%= k.zila.name %></td>
              <td><%= k.ksheter.name %></td>
              <td><%= k.startTime || '—' %></td> <!-- ✅ Show Time or Dash -->
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</section>

<%- include('../partials/footer') %>
