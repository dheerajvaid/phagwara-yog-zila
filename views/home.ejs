          <div id="collapsePrant" class="accordion-collapse collapse" data-bs-parent="#prantAccordion">
            <div class="accordion-body bg-light rounded-bottom">
              <div class="accordion" id="zilaAccordion">
                <% zilaList.forEach((zila, zIndex) => { %>
                  <div class="accordion-item border-0 shadow-sm mb-3 rounded-3">
                    <h2 class="accordion-header" id="headingZila<%= zIndex %>">
                      <button class="accordion-button bg-primary bg-opacity-10 text-dark rounded-top flex-column align-items-start text-start" type="button" data-bs-toggle="collapse" data-bs-target="#collapseZila<%= zIndex %>">
                        <div class="fw-bold">ЁЯПЩя╕П <%= zila.name %></div>
                        <div class="small">Ksheter: <%= (ksheterByZila[zila._id]?.length || 0) %>, Kendras: <%= (ksheterByZila[zila._id] || []).reduce((count, ksheter) => count + (kendersByKsheter[ksheter._id]?.length || 0), 0) %>, Saadhaks: <%= (ksheterByZila[zila._id] || []).reduce((count, ksheter) => { return count + (kendersByKsheter[ksheter._id] || []).reduce((kCount, kender) => kCount + (saadhaksByKender[kender._id]?.length || 0), 0); }, 0) %></div>
                      </button>
                    </h2>
                    <div id="collapseZila<%= zIndex %>" class="accordion-collapse collapse" data-bs-parent="#zilaAccordion">
                      <div class="accordion-body bg-white rounded-bottom">
                        <div class="accordion" id="ksheterAccordion<%= zIndex %>">
                          <% (ksheterByZila[zila._id] || []).forEach((ksheter, kIndex) => { %>
                            <div class="accordion-item border-0 shadow-sm mb-2 rounded-3">
                              <h2 class="accordion-header" id="headingKsheter<%= zIndex %>_<%= kIndex %>">
                                <button class="accordion-button collapsed bg-info bg-opacity-10 text-dark fw-medium rounded-top flex-column align-items-start text-start" type="button" data-bs-toggle="collapse" data-bs-target="#collapseKsheter<%= zIndex %>_<%= kIndex %>">
                                  <div class="fw-bold">ЁЯПЮя╕П <%= ksheter.name %> Ksheter</div>
                                  <div class="small">Kendras: <%= (kendersByKsheter[ksheter._id]?.length || 0) %>, Saadhaks: <%= (kendersByKsheter[ksheter._id] || []).reduce((kCount, kender) => kCount + (saadhaksByKender[kender._id]?.length || 0), 0) %></div>
                                </button>
                              </h2>
                              <div id="collapseKsheter<%= zIndex %>_<%= kIndex %>" class="accordion-collapse collapse" data-bs-parent="#ksheterAccordion<%= zIndex %>">
                                <div class="accordion-body bg-light rounded-bottom">
                                  <ul class="list-group">
                                    <% (kendersByKsheter[ksheter._id] || []).forEach(kender => { %>
                                      <li class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-center rounded-2 shadow-sm mb-2 border-0">
                                        <div>
                                          <strong class="text-dark">ЁЯПл <%= kender.name %></strong>
                                          <div class="text-muted small"><%= kender.address %></div>
                                        </div>
                                        <div class="mt-2 mt-md-0 text-end">
                                          <span class="badge bg-primary bg-gradient rounded-pill px-3 py-2">
                                            Saadhaks: <%= saadhaksByKender[kender._id]?.length || 0 %>
                                          </span>
                                        </div>
                                      </li>
                                    <% }) %>
                                  </ul>
                                </div>
                              </div>
                            </div>
                          <% }) %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
