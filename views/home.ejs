<div class="container py-3 px-2">
  <div class="accordion" id="prantAccordion">
    <div class="accordion-item shadow-sm border-0 mb-3 rounded-3">
      <h2 class="accordion-header" id="headingPrant">
        <button class="accordion-button fw-bold bg-success bg-gradient text-white rounded-top" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePrant">
          ЁЯМР Prant Directory тАУ Zilas: <%= zilaList.length %>,
          Ksheter: <%= Object.values(ksheterByZila).flat().length %>,
          Kendras: <%= Object.values(kendersByKsheter).flat().length %>,
          Saadhaks: <%= Object.values(saadhaksByKender).flat().length %>
        </button>
      </h2>
      <div id="collapsePrant" class="accordion-collapse collapse" data-bs-parent="#prantAccordion">
        <div class="accordion-body bg-light rounded-bottom">

          <!-- ZILA ACCORDION -->
          <div class="accordion" id="zilaAccordion">
            <% zilaList.forEach((zila, zIndex) => { %>
              <div class="accordion-item border-0 shadow-sm mb-3 rounded-3">
                <h2 class="accordion-header" id="headingZila<%= zIndex %>">
                  <button class="accordion-button bg-primary bg-opacity-10 text-dark fw-semibold rounded-top" type="button" data-bs-toggle="collapse" data-bs-target="#collapseZila<%= zIndex %>">
                    ЁЯПЩя╕П <%= zila.name %> Zila тАУ Ksheter: <%= (ksheterByZila[zila._id]?.length || 0) %>,
                    Kendras: <%= (ksheterByZila[zila._id] || []).reduce((count, ksheter) => count + (kendersByKsheter[ksheter._id]?.length || 0), 0) %>,
                    Saadhaks: <%= (ksheterByZila[zila._id] || []).reduce((count, ksheter) => {
                      return count + (kendersByKsheter[ksheter._id] || []).reduce((kCount, kender) => kCount + (saadhaksByKender[kender._id]?.length || 0), 0);
                    }, 0) %>
                  </button>
                </h2>
                <div id="collapseZila<%= zIndex %>" class="accordion-collapse collapse" data-bs-parent="#zilaAccordion">
                  <div class="accordion-body bg-white rounded-bottom">

                    <!-- KSHETER ACCORDION -->
                    <div class="accordion" id="ksheterAccordion<%= zIndex %>">
                      <% (ksheterByZila[zila._id] || []).forEach((ksheter, kIndex) => { %>
                        <div class="accordion-item border-0 shadow-sm mb-2 rounded-3">
                          <h2 class="accordion-header" id="headingKsheter<%= zIndex %>_<%= kIndex %>">
                            <button class="accordion-button collapsed bg-info bg-opacity-10 text-dark fw-medium rounded-top" type="button" data-bs-toggle="collapse" data-bs-target="#collapseKsheter<%= zIndex %>_<%= kIndex %>">
                              ЁЯПЮя╕П <%= ksheter.name %> Ksheter тАУ Kendras: <%= (kendersByKsheter[ksheter._id]?.length || 0) %>,
                              Saadhaks: <%= (kendersByKsheter[ksheter._id] || []).reduce((kCount, kender) => kCount + (saadhaksByKender[kender._id]?.length || 0), 0) %>
                            </button>
                          </h2>
                          <div id="collapseKsheter<%= zIndex %>_<%= kIndex %>" class="accordion-collapse collapse" data-bs-parent="#ksheterAccordion<%= zIndex %>">
                            <div class="accordion-body bg-light rounded-bottom">

                              <!-- KENDER LIST -->
                              <ul class="list-group">
                                <% (kendersByKsheter[ksheter._id] || []).forEach(kender => { %>
                                  <li class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-start rounded-2 shadow-sm mb-2 border-0">
                                    <div>
                                      <strong class="text-dark">ЁЯПл <%= kender.name %></strong>
                                      <div class="text-muted small"><%= kender.address %></div>
                                    </div>
                                    <div class="mt-2 mt-md-0 text-end">
                                      <span class="badge bg-primary bg-gradient rounded-pill px-3 py-2">
                                        Saadhaks: <%= saadhaksByKender[kender._id]?.length || 0 %>
                                      </span>
                                    </div>
                                  </li>
                                <% }) %>
                              </ul>

                            </div>
                          </div>
                        </div>
                      <% }) %>
                    </div>

                  </div>
                </div>
              </div>
            <% }) %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>






