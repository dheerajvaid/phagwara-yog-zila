    color: #2c3e50;
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.5);
  }

  .accordion .accordion-item {
    margin-bottom: 1rem;
    border: none;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .accordion-button:hover {
