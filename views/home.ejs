<!-- üåê Prant Accordion -->
<div class="container py-3 px-2">
  <div class="accordion" id="prantAccordion">
    <% prantList.forEach((prant, pIndex) => { %>
      <div class="accordion-item shadow-sm border-0 mb-3 rounded-3">
        <h2 class="accordion-header" id="headingPrant<%= pIndex %>">
          <button class="accordion-button collapsed bg-success bg-gradient text-white rounded-top flex-column align-items-start text-start" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePrant<%= pIndex %>">
            <div class="fw-bold">üåê <%= prant.name %> Prant</div>
            <div class="small">
              Zila: <%= (zilaByPrant[prant._id]?.length || 0) %>,
              Ksheter: <%= (zilaByPrant[prant._id] || []).reduce((k, z) => k + (ksheterByZila[z._id]?.length || 0), 0) %>,
              Kender: <%= (zilaByPrant[prant._id] || []).reduce((k, z) => k + (ksheterByZila[z._id] || []).reduce((kk, ks) => kk + (kendersByKsheter[ks._id]?.length || 0), 0), 0) %>,
              Saadhak: <%= counts.prant[prant._id] || 0 %>
            </div>
          </button>
        </h2>

        <div id="collapsePrant<%= pIndex %>" class="accordion-collapse collapse" data-bs-parent="#prantAccordion">
          <div class="accordion-body bg-light rounded-bottom">
            <div class="accordion" id="zilaAccordion<%= pIndex %>">
              <% (zilaByPrant[prant._id] || []).forEach((zila, zIndex) => { %>
                <div class="accordion-item border-0 shadow-sm mb-3 rounded-3">
                  <h2 class="accordion-header">
                    <button class="accordion-button bg-primary bg-opacity-10 text-dark flex-column text-start" data-bs-toggle="collapse" data-bs-target="#collapseZila<%= pIndex %>_<%= zIndex %>">
                      <div class="fw-bold">üèôÔ∏è <%= zila.name %></div>
                      <div class="small">
                        Ksheter: <%= (ksheterByZila[zila._id]?.length || 0) %>,
                        Kendras: <%= (ksheterByZila[zila._id] || []).reduce((c, ks) => c + (kendersByKsheter[ks._id]?.length || 0), 0) %>,
                        Saadhaks: <%= counts.zila[zila._id] || 0 %>
                      </div>
                    </button>
                  </h2>

                  <div id="collapseZila<%= pIndex %>_<%= zIndex %>" class="accordion-collapse collapse" data-bs-parent="#zilaAccordion<%= pIndex %>">
                    <div class="accordion-body bg-white rounded-bottom">
                      <div class="accordion" id="ksheterAccordion<%= pIndex %>_<%= zIndex %>">
                        <% (ksheterByZila[zila._id] || []).forEach((ksheter, kIndex) => { %>
                          <div class="accordion-item border-0 shadow-sm mb-2 rounded-3">
                            <h2 class="accordion-header">
                              <button class="accordion-button collapsed bg-info bg-opacity-10 text-dark flex-column text-start" data-bs-toggle="collapse" data-bs-target="#collapseKsheter<%= pIndex %>_<%= zIndex %>_<%= kIndex %>">
                                <div class="fw-bold">üèûÔ∏è <%= ksheter.name %> Ksheter</div>
                                <div class="small">
                                  Kendras: <%= (kendersByKsheter[ksheter._id]?.length || 0) %>,
                                  Saadhaks: <%= counts.ksheter[ksheter._id] || 0 %>
                                </div>
                              </button>
                            </h2>

                            <div id="collapseKsheter<%= pIndex %>_<%= zIndex %>_<%= kIndex %>" class="accordion-collapse collapse" data-bs-parent="#ksheterAccordion<%= pIndex %>_<%= zIndex %>">
                              <div class="accordion-body bg-light rounded-bottom">
                                <ul class="list-group">
                                  <% (kendersByKsheter[ksheter._id] || []).forEach(kender => { %>
                                    <li class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-center rounded-2 shadow-sm mb-2 border-0">
                                      <div>
                                        <strong class="text-dark">üè´ <%= kender.name %></strong>
                                        <div class="text-muted small"><%= kender.address %></div>
                                      </div>
                                      <div class="mt-2 mt-md-0 text-end">
                                        <span class="badge bg-primary rounded-pill px-3 py-2">
                                          Saadhaks: <%= counts.kender[kender._id] || 0 %>
                                        </span>
                                      </div>
                                    </li>
                                  <% }) %>
                                </ul>
                              </div>
                            </div>
                          </div>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>


