    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: stretch;
    gap: 6px;
  }
  .stats-row .card {
    flex: 1 1 0;
    min-width: 0;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }
</style>

