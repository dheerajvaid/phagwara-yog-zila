<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<section class="container mt-5">
  <h2 class="mb-4">🖊️ Edit Zila</h2>
  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  <form action="/zila/edit/<%= zila._id %>" method="POST">
    <div class="mb-3">
      <label class="form-label">Zila Name</label>
      <input type="text" class="form-control" name="name" value="<%= zila.name %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Zila</button>
  </form>
</section>

<%- include('../partials/footer') %>
