    <title>Bharatiya Yog Sansthan</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
      .dropdown-menu a:hover {
        background-color: #e9ecef;
      }

      .table td, .table th {
        vertical-align: middle !important;
      }

      .form-check-input, .form-check-label {
        cursor: pointer;
      }

      .image-container {
        width: 100%;
        padding: 0.5rem;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .event-img {
        width: 100%;
        height: auto;
        object-fit: contain;
        background-color: #f8f9fa;
      }

      @media (max-width: 991px) {
        .navbar .dropdown-menu {
          position: static !important;
          float: none !important;
          background-color: #212529;
          border: none;
        }

        .dropdown-menu .dropdown-item {
          color: white;
        }

        .dropdown-menu .dropdown-item:hover {
          background-color: #343a40;
        }
      }

      .swirl-logo {
        width: 100px;
        height: 100px;
        animation: swirlY 2.5s linear infinite;
        transform-style: preserve-3d;
        backface-visibility: hidden;
      }

      @keyframes swirlY {
        0%   { transform: rotateY(0deg); }
        50%  { transform: rotateY(180deg); }
        100% { transform: rotateY(360deg); }
      }

      #loadingSpinner {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.7);
        z-index: 9999;
        text-align: center;
        padding-top: 200px;
      }
    </style>

    <style>
      /* Make all form labels dark and bold */
label,
.form-label {
  color: #000 !important;   /* pure black */
  font-weight: 600 !important; /* semi-bold */
}
/* Apply consistent border styling to all form elements */
input[type="text"],
input[type="number"],
input[type="email"],
input[type="password"],
input[type="tel"],
input[type="date"],
input[type="time"],
input[type="datetime-local"],
input[type="month"],
input[type="week"],
input[type="url"],
textarea,
select {
  border: 2px solid #000 !important;  /* Dark black border */
  border-radius: 6px !important;      /* Slightly rounded corners */
  padding: 8px !important;            /* Comfortable padding */
  background-color: #fff !important;  /* Ensure white background */
}

/* Focus style for better visibility */
input:focus,
textarea:focus,
select:focus {
  border-color: #ff6600 !important;   /* Bright orange border on focus */
  outline: none !important;
  box-shadow: 0 0 5px rgba(255, 102, 0, 0.5) !important;
}

/* For Bootstrap form-control specifically */
.form-control {
  border: 2px solid #000 !important;
  border-radius: 6px !important;
  background-color: #fff !important;
}

/* For dropdown menus in navbar */
.navbar .dropdown-menu {
  border: 2px solid #000 !important;
  border-radius: 6px !important;
}

/* Optional: style checkboxes and radio buttons outline */
input[type="checkbox"],
input[type="radio"] {
  accent-color: #ff6600; /* Modern browsers: orange tick/circle */
}
</style>


    <script src="/js/utils.js"></script>
  </head>
  <body>
    <!-- Spinner Overlay -->
    <div id="loadingSpinner">
      <img src="/images/logowbg.png" class="swirl-logo" alt="Loading..." />
    </div>

    <script>
      if ("serviceWorker" in navigator) {
        window.addEventListener("load", function () {
          navigator.serviceWorker
            .register("/sw.js")
            .then(reg => console.log("✅ ServiceWorker registered with scope:", reg.scope))
            .catch(err => console.error("❌ ServiceWorker registration failed:", err));
        });
      }
    </script>
