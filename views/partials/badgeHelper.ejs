const {
  adminRoles,
  prantRoles,
  zilaRoles,
  ksheterRoles,
  kenderRoles,
  kenderTeamRoles,
  saadhakRoles,
} = require("../config/roles");

function getBadgeColor(role) {
  if (adminRoles.includes(role)) return "danger"; // ðŸ”´ Admin
  if (prantRoles.includes(role)) return "primary"; // ðŸ”µ Prant Level
  if (zilaRoles.includes(role)) return "success"; // ðŸŸ¢ Zila Level
  if (ksheterRoles.includes(role)) return "warning"; // ðŸŸ¡ Ksheter Level
  if (kenderRoles.includes(role)) return "info"; // ðŸ”µ Kender Leaders
  if (kenderTeamRoles.includes(role)) return "secondary"; // âšª Team
  if (saadhakRoles.includes(role)) return "dark"; // âš« General Saadhak

  return "secondary"; // Default fallback
}

module.exports = getBadgeColor;
