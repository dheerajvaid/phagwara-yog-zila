<%
const { adminRoles, prantRoles, zilaRoles, ksheterRoles, kenderRoles, kenderTeamRoles, saadhakRoles } = roles;

const isAdmin = user?.roles.some(role => adminRoles.includes(role));
const isPrantLevel = user?.roles.some(role => prantRoles.includes(role));
const isZilaLevel = user?.roles.some(role => zilaRoles.includes(role));
const isKsheterLevel = user?.roles.some(role => ksheterRoles.includes(role));
const isKenderLevel = user?.roles.some(role => [...kenderRoles, ...kenderTeamRoles].includes(role));
const isSaadhakOnly = user?.roles.some(role => saadhakRoles.includes(role));
%>

<style>
  :root {
    --brand-bg-1: #1b1f24;
    --brand-bg-2: #2e3338;
    --link: #e2e6ea;
    --link-hover: #0d6efd;
    --underline: #0d6efd;
  }
  .navbar-gradient {
    background: linear-gradient(145deg, var(--brand-bg-1), var(--brand-bg-2));
    backdrop-filter: blur(6px);
  }
  .navbar-brand, .navbar-nav .nav-link {
    position: relative;
    color: var(--link) !important;
    transition: color 0.25s ease;
  }
  .navbar-brand::after, .navbar-nav .nav-link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -3px;
    width: 0;
    height: 2px;
    background: var(--underline);
    transition: width 0.25s ease;
    opacity: 0.85;
  }
  .navbar-brand:hover::after, .navbar-nav .nav-link:hover::after {
    width: 100%;
  }
  .navbar-brand:hover, .navbar-nav .nav-link:hover {
    color: var(--link-hover) !important;
  }

  .menu-divider {
  border: 0;
  height: 1px;
  margin: 0.5rem 0;
  background: linear-gradient(to right, transparent, var(--underline), transparent);
  opacity: 0.5;
}

  @media (max-width: 991px) {
    .navbar .dropdown-menu {
      background: var(--brand-bg-2);
      border: none;
    }
    .dropdown-menu .dropdown-item {
      color: #f8f9fa;
    }
    .dropdown-menu .dropdown-item:hover {
      background: rgba(13, 110, 253, 0.15);
      color: #fff;
    }
    .calendar-icon-mobile {
      position: absolute;
      top: 10px;
      right: 85px;
      z-index: 1050;
    }
    .calendar-icon-mobile i {
      font-size: 1.5rem;
    }
    .calendar-icon-mobile .badge {
      font-size: 0.65rem;
      padding: 4px 6px;
    }
  }
</style>




<nav class="navbar navbar-expand-lg navbar-dark navbar-gradient sticky-top shadow-sm">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold d-flex align-items-center gap-2" href="/">
      <img src="/images/logo-nbg.png" alt="BYS Logo" style="height: 28px;" />
      HOME
    </a>

    <% if (user) { %>
      <a href="/calendar/today" class="calendar-icon-mobile d-lg-none text-decoration-none text-warning" title="Birthday & Anniversary">
        <div class="position-relative">
          <i class="bi bi-cake2-fill"></i>
          <% if (typeof eventCount !== 'undefined' && eventCount > 0) { %>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              <%= eventCount %>
              <span class="visually-hidden">Today's Events</span>
            </span>
          <% } %>
        </div>
      </a>
    <% } %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
      aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

        <% if (user) { %>
          <li class="nav-item d-none d-lg-block">
            <a href="/calendar/today" class="nav-link position-relative px-3 d-flex align-items-center" title="Birthday & Anniversary">
              <i class="bi bi-cake2-fill fs-5 text-warning"></i>
              <% if (typeof eventCount !== 'undefined' && eventCount > 0) { %>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                  <%= eventCount %>
                  <span class="visually-hidden">unread events</span>
                </span>
              <% } %>
            </a>
          </li>
        <% } %>

       <%- include('explore') %>
       <%- include('info-stories') %>
        <%- include('sharpMind') %>

        <% if (!user || isAdmin || isZilaLevel || isKsheterLevel || isKenderLevel || isSaadhakOnly) { %>
          <li class="nav-item"><a class="nav-link" href="/yog-samagri/report">🛍️ Yog Samagri</a></li>
           <%- include('wishes') %>    
          <% } %>

        <% if (user) { %>
          <% if (isAdmin || isPrantLevel) { %>
            <li class="nav-item"><a class="nav-link" href="/admin/panel">🛠️ Admin Panel</a></li>
            <%- include('zila') %>
            <%- include('ksheter') %>
            <%- include('kender') %>
            <%- include('saadhak') %>
            <%- include('attendance') %>
             <%- include('program') %>
            <%- include('question') %>
            <%- include('yog-samagri') %>
            <li class="nav-item"><a class="nav-link" href="/reset-password/list">🔑 Reset Password</a></li>
            <li class="nav-item"><a class="nav-link" href="/roles/manage">🎖️ Role Management</a></li>
          <% } else { %>
            <% if (isZilaLevel) { %>
              <%- include('ksheter') %>
              <%- include('kender') %>
              <%- include('saadhak') %>
              <%- include('attendance') %>
              <%- include('program') %>
              <%- include('question') %>
              
              <li class="nav-item"><a class="nav-link" href="/reset-password/list">🔑 Reset Password</a></li>
            <% } else if (isKsheterLevel) { %>
              <%- include('kender') %>
              <%- include('saadhak') %>
              <%- include('attendance') %>
               <%- include('program') %>
              
              <li class="nav-item"><a class="nav-link" href="/reset-password/list">🔑 Reset Password</a></li>
            <% } else if (isKenderLevel) { %>
              <% if (user.roles.some(role => kenderRoles.includes(role))) { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/kender/<%= user.kender %>/edit-address-time">
                      🏠 Update Kender Details
                    </a>
                  </li>
              <% } %>
              <%- include('saadhak') %>
              <%- include('attendance') %>
               <%- include('program') %>
              <li class="nav-item"><a class="nav-link" href="/reset-password/list">🔑 Reset Password</a></li>
            <% } else if (isSaadhakOnly) { %>
              <%- include('saadhak') %>
               <%- include('program') %>
              <li class="nav-item"><a class="nav-link" href="/reset-password/list">🔑 Reset Password</a></li>
            <% } %>
          <% } %>        
          
          <li class="nav-item"><a class="nav-link" href="/dashboard">🗳️ DASHBOARD</a></li>
          <li class="nav-item"><a class="nav-link" href="/auth/change-password">🔑 Change Password</a></li>
          <li class="nav-item"><a class="nav-link text-danger" href="/auth/logout">🚪 Logout</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/auth/login">🔑 Login</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
