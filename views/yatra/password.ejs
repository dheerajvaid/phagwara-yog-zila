<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-5 text-center">
  <h3 class="text-primary">🔐 Vrindavan Trip Registration</h3>
  <p class="text-muted">Please enter the secret password to continue.</p>

  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="/vrindavan-trip/unlock" method="POST" class="mt-3" style="max-width: 400px; margin: auto;">
    <div class="input-group mb-3">
      <input 
        type="password" 
        name="password" 
        id="passwordInput" 
        class="form-control" 
        placeholder="Enter password..." 
        required
      />
      <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
        👁️
      </button>
    </div>
    <button type="submit" class="btn btn-success">Unlock Form</button>
  </form>
</div>

<script>
  window.onload = () => {
    document.getElementById('passwordInput').focus();
  };

  function togglePassword() {
    const input = document.getElementById('passwordInput');
    input.type = input.type === 'password' ? 'text' : 'password';
  }
</script>

