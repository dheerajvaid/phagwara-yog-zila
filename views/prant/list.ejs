<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<div class="container mt-4">
  <h4 class="mb-3">📍 All Prants</h4>
  <a href="/prant/add" class="btn btn-sm btn-primary mb-3">➕ Add Prant</a>
  <table class="table table-bordered">
    <thead><tr><th>#</th><th>Name</th><th>Actions</th></tr></thead>
    <tbody>
      <% prants.forEach((prant, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= prant.name %></td>
          <td>
            <a href="/prant/edit/<%= prant._id %>" class="btn btn-sm btn-warning">Edit</a>
            <form method="POST" action="/prant/delete/<%= prant._id %>" class="d-inline">
              <button type="submit" onclick="return confirm('Delete this prant?')" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>
