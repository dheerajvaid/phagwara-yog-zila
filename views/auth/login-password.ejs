<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<style>
  .login-container {
    max-width: 420px;
    margin: 0 auto;
    background: #ffffff;
    padding: 2rem 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.12);
  }

  .login-container h3 {
    font-size: 1.5rem;
    font-weight: bold;
    color: #1e88e5;
    text-align: center;
    margin-bottom: 1rem;
  }

  .login-btn {
    width: 100%;
    font-size: 1.1rem;
    padding: 0.75rem;
    border-radius: 0.5rem;
  }

  @media(max-width: 480px) {
    .login-container {
      padding: 1.5rem 1rem;
      border-radius: 0.75rem;
    }

    .login-container h3 {
      font-size: 1.25rem;
    }
  }
</style>

<div class="container mt-5">
  <div class="login-container">

    <a href="/auth/login" class="btn btn-sm btn-outline-secondary mb-3">‚Üê Back</a>

    <% if (error) { %>
      <div class="alert alert-danger text-center py-2 px-3 mb-3">
        <%= error %>
      </div>
    <% } %>

    <h3>üîí Enter Password</h3>

    <form action="/auth/login-password" method="POST">
      <input type="hidden" name="mobile" value="<%= mobile %>">

      <div class="mb-3">
        <label for="password" class="form-label fw-semibold">Password</label>
        <input type="password" name="password" id="password" class="form-control form-control-lg text-center" placeholder="Your password" autofocus required>
      </div>

      <button type="submit" class="btn btn-primary login-btn">üîì Login</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
