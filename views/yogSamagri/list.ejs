<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
  <h2 class="mb-4">📦 Yog Samagri List</h2>
  <a href="/yog-samagri/new" class="btn btn-success mb-3">➕ Add New Samagri</a>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Item Name</th>
        <th>Price (₹)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td>
            <a href="/yog-samagri/<%= item._id %>/edit" class="btn btn-primary btn-sm">✏️ Edit</a>
            <form action="/yog-samagri/<%= item._id %>/delete" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">🗑 Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
