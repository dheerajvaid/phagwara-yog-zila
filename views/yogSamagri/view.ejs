<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="container mt-4" id="report-section">
  <h2 class="text-center mb-4 text-primary">üßò‚Äç‚ôÇÔ∏è Yog Samagri</h2>
    <div class="text-center mb-3">
    <button class="btn btn-warning btn-sm me-2 shadow" onclick="downloadImage()">
      üì∏ Export as Image
    </button>
    <button class="btn btn-success btn-sm shadow" onclick="downloadCSV()">
      üìÑ Export as CSV
    </button>
  </div>
  <div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm rounded" style="background-color: #fefefe;">
      <thead class="table-primary text-center">
        <tr>
          <th scope="col">#</th>
          <th scope="col"><i class="fas fa-box"></i> Item Name</th>
          <th scope="col"><i class="fas fa-rupee-sign"></i> Price (‚Çπ)</th>
        </tr>
      </thead>
      <tbody class="text-center align-middle">
        <% items.forEach((item, index) => { %>
          <tr style="font-size: 1.1rem;">
            <td><%= index + 1 %></td>
            <td class="text-capitalize text-dark fw-semibold"><%= item.name %></td>
            <td class="text-success fw-bold">‚Çπ <%= item.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>


<!-- üîΩ Export Buttons (Bottom) -->
  <div class="text-center mt-4 mb-5">
    <button class="btn btn-warning btn-sm me-2 shadow" onclick="downloadImage()">
      üì∏ Export as Image
    </button>
    <button class="btn btn-success btn-sm shadow" onclick="downloadCSV()">
      üìÑ Export as CSV
    </button>
  </div>
</div>

<!-- Scripts for Export -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
<script>
  function downloadImage() {
    const report = document.getElementById('report-section');
    html2canvas(report, {
      useCORS: true,
      scale: 2
    }).then(canvas => {
      const link = document.createElement('a');
      link.download = 'Yog-Samagri-Report.png';
      link.href = canvas.toDataURL('image/png');
      link.click();
    });
  }

  async function downloadCSV() {
    try {
    const rows = [['Item Name', 'Price (‚Çπ)']];
    <% items.forEach(item => { %>
      rows.push(['<%= item.name %>', '<%= item.price %>']);
    <% }) %>

    let csvContent = 'data:text/csv;charset=utf-8,'
      + rows.map(e => e.join(',')).join('\n');

    const encodedUri = encodeURI(csvContent);
    const link = document.createElement('a');
    link.setAttribute('href', encodedUri);
    link.setAttribute('download', 'Yog-Samagri-Report.csv');
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  }catch (error) {
      alert('Failed to download CSV');
      console.error(error);
    } finally {
      // Always hide spinner
      document.getElementById('loadingSpinner').style.display = 'none';
    }
  }
</script>

<%- include('../partials/footer') %>
