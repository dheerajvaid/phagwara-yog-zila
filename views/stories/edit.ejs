<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<div class="container py-4">
  <h2><%= typeof story !== 'undefined' && story ? '✍️ Edit Story' : '📝 Add New Story' %></h2>
  <form method="POST" action="<%= story ? '/stories/edit/' + story._id : '/stories/new' %>">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" name="title" class="form-control" required value="<%= story?.title || '' %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Full Story</label>
      <textarea name="content" rows="8" class="form-control" required><%= story?.content || '' %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <% if (story) { %>
      <form method="POST" action="/stories/delete/<%= story._id %>" style="display:inline;">
        <button type="submit" class="btn btn-danger ms-2">Delete</button>
      </form>
    <% } %>
  </form>
</div>
<%- include('../partials/footer') %>
